@model TurmaFormViewModel
@{
    ViewData["Title"] = "Cadastro de Turmas";
}

<h2 class="mb-4">@ViewData["Title"]</h2>
<hr>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="Turma.Nome"></label>
                <input asp-for="Turma.Nome" class="form-control" placeholder="Insira o nome da turma">
            </div>
              <div class="form-group my-3">
                <label asp-for="Turma.CursoId"></label>
                <select class="form-select" asp-for="Turma.CursoId" asp-items="@(new SelectList(Model.Cursos, "CursoId", "Nome"))">

                </select>
            </div>
            <div class="form-group my-3">
                <button type="submit" class="btn btn-primary">Salvar</button>
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>